{
  "compilerOptions": {
    "rootDir": ".",
    "incremental": true,
    "outDir": "build",
    "target": "ES2017",
    "types": ["node"],
    "lib": ["es2017"],
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": false,
    "esModuleInterop": false,
    "isolatedModules": true,
    "checkJs": false,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@pre-bundled/tape": ["./types/pre-bundled__tape"],
      "*" : ["./types/*"]
    },
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "types/**/*.d.ts",
    "src/*.ts",
    "src/*.js",
    "test/**/*.ts"
  ]
}
